#include <linux/sched.h>

BEGIN
{
  printf("使用: bpftrace ./switchcnt.bt [PID]\n");
  printf("统计某进程的切换次数，按 Ctrl-C 显示结果\n\n");
  @time = nsecs
}

kprobe:dequeue_task_fair / pid == $1 /
{
  printf("Switched!\n");
  @switch[pid] = count()
}

END {
  @time = (nsecs-@time) / 1000000000; // 纳秒转秒
}
